<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="biblioteca.Libro" table="libro" catalog="biblioteca">
		<id name="id">
			<column name="id"></column>
			<generator class="increment"></generator>
		</id>
		<property name="titulo" column="titulo"></property>
		<property name="autor" column="autor"></property>
		<property name="anioPublicacion" column="anio_publicacion" type="integer"></property>
		<property name="disponible" column="disponible" type="boolean"></property>
	</class>
</hibernate-mapping>